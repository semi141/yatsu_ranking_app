<h1>動画検索</h1>

<%= form_with url: search_results_path, method: :get, local: true do |f| %>
  <div>
    <label>タイトルで検索：</label>
    <%= f.text_field :keyword, placeholder: "動画タイトルを入力" %>
  </div>

  <div>
  <label>タグで絞り込み：</label>
  <%= f.select :tag, options_for_select(Video.tag_counts_on(:tags).pluck(:name)), include_blank: "全て" %>
  </div>

  <div>
    <%= f.submit "検索" %>
  </div>
<% end %>
