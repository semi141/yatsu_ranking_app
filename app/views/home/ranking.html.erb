<div class="container mt-5">
  <!-- 検索バー -->
  <div class="row justify-content-center mb-4">
    <div class="col-md-6">
      <%= form_with url: search_path, method: :get, local: true do |f| %>
        <div class="input-group">
          <%= f.text_field :q, class: "form-control", placeholder: "動画を検索..." %>
          <button class="btn btn-primary" type="submit">検索</button>
        </div>
      <% end %>
    </div>
  </div>

  <!-- タブ切り替え -->
  <ul class="nav nav-tabs justify-content-center" id="rankingTabs" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="my-tab" data-bs-toggle="tab" data-bs-target="#my" type="button" role="tab">
        自分ランキング
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button" role="tab">
        全体ランキング
      </button>
    </li>
  </ul>

  <!-- ランキング表示 -->
  <div class="tab-content mt-3">
    <div class="tab-pane fade show active" id="my" role="tabpanel">
      <% if user_signed_in? %>
        <p>ここに自分ランキングを表示するよ～！</p>
      <% else %>
        <p>ログインしてください</p>
      <% end %>
    </div>
    <div class="tab-pane fade" id="all" role="tabpanel">
      <p>ここに全体ランキングが入るよ！</p>
    </div>
  </div>
</div>
