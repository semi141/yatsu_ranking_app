<div class="container mt-5">
  <!-- 検索バー -->
<%= form_with url: search_path, method: :get, local: true do |f| %>
    <div>
      <label>タイトルで検索：</label>
      <%= f.text_field :keyword, placeholder: "動画タイトルを入力" %>
    </div>

    <div>
    <label>タグで絞り込み：</label>
    <%= f.select :tag, options_for_select(Video.tag_counts_on(:tags).pluck(:name)), include_blank: "全て" %>
    </div>

    <div>
      <%= f.submit "検索" %>
    </div>
  <% end %>

  <!-- タブ風ボタン -->
  <div class="text-center mb-5">
    <div class="btn-group" role="group">
      <%= link_to "自分ランキング", root_path, 
          class: "btn #{params[:tab] == 'all' ? 'btn-outline-primary' : 'btn-primary'} px-4" %>
      <%= link_to "全体ランキング", root_path(tab: "all"), 
          class: "btn #{params[:tab] == 'all' ? 'btn-primary' : 'btn-outline-primary'} px-4" %>
    </div>
  </div>

  <!-- 表示切り替え -->
  <% if params[:tab] == "all" %>
    <div class="card shadow-sm">
      <div class="card-body">
        <h3 class="card-title text-center mb-4 text-success">全体ランキング</h3>
        <% @all_rankings.each_with_index do |video, index| %>
          <div class="d-flex justify-content-between align-items-center mb-3 p-3 rounded hover-bg-light">
            <div>
              <strong class="text-primary fs-4"><%= index + 1 %></strong>
              <%= link_to video_path(video), class: "text-decoration-none text-dark fw-bold" do %>
                <%= video.title %>
              <% end %>
            </div>
            <span class="badge bg-success fs-6">
              視聴回数<%= Watch.where(video: video).sum(:watched_count) %>回
            </span>
          </div>
        <% end %>
      </div>
    </div>

  <% else %>
    <div class="card shadow-sm">
      <div class="card-body">
        <h3 class="card-title text-center mb-4 text-primary">自分ランキング</h3>
        <% if user_signed_in? && @my_rankings.present? %>
          <% @my_rankings.each_with_index do |video, index| %>
            <div class="d-flex justify-content-between align-items-center mb-3 p-3 rounded hover-bg-light">
              <div>
                <strong class="text-primary fs-4"><%= index + 1 %></strong>
                <%= link_to video_path(video), class: "text-decoration-none text-dark fw-bold" do %>
                  <%= video.title %>
                <% end %>
              </div>
              <span class="badge bg-primary fs-6">
                視聴回数<%= Watch.where(user: current_user, video: video).take&.watched_count.to_i %>回
              </span>
            </div>
          <% end %>
        <% else %>
          <p class="text-center text-muted mt-4">
            まだ視聴履歴がありません…<br>
            ジャルジャル見てランキング入りさせよう！
          </p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
