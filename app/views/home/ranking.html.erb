<div class="container mt-5">
  <!-- 検索バー -->
  <div class="row justify-center mb-4">
    <div class="col-md-6">
      <%= form_with url: search_path, method: :get, local: true do |f| %>
        <div class="input-group">
          <%= f.text_field :q, class: "form-control", placeholder: "動画を検索..." %>
          <button class="btn btn-primary" type="submit">検索</button>
        </div>
      <% end %>
    </div>
  </div>

  <!-- タブ風ボタン -->
  <div class="text-center mb-5">
    <div class="btn-group" role="group">
      <%= link_to "自分ランキング", root_path, 
          class: "btn #{params[:tab] == 'all' ? 'btn-outline-primary' : 'btn-primary'} px-4" %>
      <%= link_to "全体ランキング", root_path(tab: "all"), 
          class: "btn #{params[:tab] == 'all' ? 'btn-primary' : 'btn-outline-primary'} px-4" %>
    </div>
  </div>

  <!-- 表示切り替え -->
  <% if params[:tab] == "all" %>
    <div class="card shadow-sm">
      <div class="card-body">
        <h3 class="card-title text-center mb-4 text-success">全体ランキング</h3>
        <% @all_rankings.each_with_index do |video, index| %>
          <div class="d-flex justify-content-between align-items-center mb-3 p-3 rounded hover-bg-light">
            <div>
              <strong class="text-primary fs-4"><%= index + 1 %></strong>
              <%= link_to video_path(video), class: "text-decoration-none text-dark fw-bold" do %>
                <%= video.title %>
              <% end %>
            </div>
            <span class="badge bg-success fs-6">視聴回数<%= video.posts.count %>回</span>
          </div>
        <% end %>
      </div>
    </div>

  <% else %>
    <div class="card shadow-sm">
      <div class="card-body">
        <h3 class="card-title text-center mb-4 text-primary">自分ランキング</h3>
        <% if user_signed_in? && @my_rankings.present? %>
          <% @my_rankings.each_with_index do |video, index| %>
            <% my_count = video.posts.where(user: current_user).count %>
            <div class="d-flex justify-content-between align-items-center mb-3 p-3 rounded hover-bg-light">
              <div>
                <strong class="text-primary fs-4"><%= index + 1 %></strong>
                <%= link_to video_path(video), class: "text-decoration-none text-dark fw-bold" do %>
                  <%= video.title %>
                <% end %>
              </div>
              <span class="badge bg-primary fs-6">視聴回数<%= my_count %>回</span>
            </div>
          <% end %>
        <% else %>
          <p class="text-center text-muted mt-4">まだ視聴履歴がありません…<br>ジャルジャル見てランキング入りさせよう！</p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>