{
  "manifest_version": 3,
  "name": "奴ランキング見る奴",
  "version": "1.0",
  "description": "YouTube動画視聴を奴アプリに自動登録する拡張",

  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "奴ランキング見る奴",
    "default_popup": "popup.html"
  }
}