{
  "manifest_version": 3,
  "name": "JaruVideoWatcher",
  "version": "1.0",
  "description": "YouTube動画を開いたらRailsに自動登録する",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "http://localhost:3000/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "JaruVideoWatcher"
  }
}